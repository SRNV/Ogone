use ./nav.o3 as 'nav-component';
use ../stores/doc.store.o3 as 'store-doc-component';

<store-doc-component namespace="pages"/>
<proto>
  declare:
    public pageRender: string = '';
    public page: string = '';
  case 'update:page':
    Refs.renderer.insertAdjacentHTML('beforeend', this.page);
  break;
</proto>
<div ref="renderer" class="content-component container slide-in-right">
</div>
<div class="nav">
  <nav-component />
</div>
<style>
.container {
  background: #ffffff;
  border-right: 1px solid #e8e8e8;
  height: fit-content
  z-index: 300;
  position: relative;
}
.slide-in-right {
  animation-name: slide-in-right;
  animation-duration: 1s;
  animation-iteration-count: 1;
  animation-direction: normal;
  animation-fill-mode: forwards;
}
@keyframes slide-in-right {
  0% {
    position: relative;
    right: -1000%;
  }
  100% {
    position: relative;
    right: 0px;
  }
}
</style>
<style global>
.content-component > *:not(.highlight) {
  margin-left: 30px;
}
</style>