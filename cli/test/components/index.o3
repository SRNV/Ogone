use ./routers/main.o3 as 'router-main';

<router-main namespace="global"/>

<style global>
  body {
    color: grey;
    font-family: 'Roboto', sans-serif;
    background: #f1f1f1;
    margin: 0px;
    overflow: hidden;
  }
  a {
    text-decoration: none;
    color: cadetblue;
  }
</style>
<style name="animations" global>
  @keyframes fade-in-bottom {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0px);
    }
  }
  @keyframes fade-out-bottom {
    0% {
      opacity: 1;
      transform: translateY(0px);
    }
    100% {
      opacity: 0;
      transform: translateY(20px);
    }
  }
  @keyframes fade-out {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }
  .fade-in-bottom {
    animation: fade-in-bottom;
    animation-duration: 1s;
    animation-iteration-count: 1;
    animation-fill-mode: forwards;
    animation-timing-function: ease;
  }
  .fade-out-bottom {
    animation: fade-out-bottom;
    animation-duration: 0.5s;
    animation-iteration-count: 1;
    animation-fill-mode: forwards;
    animation-timing-function: ease;
  }
  .fade-out {
    animation: fade-out;
    animation-duration: 0.5s;
    animation-iteration-count: 1;
    animation-fill-mode: forwards;
    animation-timing-function: linear;
  }
</style>
<style name="highlighter" global>
span.pl-s1 {
  color: #ffffff;
}
span.pl-en {
  color: #afafaf;
}
span.pl-s {
  color: #90eed9;
}
span.pl-k {
  color: #a191f5;
}
span.pl-smi {
  color: #f9cb76;
}
.highlight {
  background: #383838;
  padding: 29px;
  box-shadow: inset -3px 12px 4px #00000089;
  margin: auto;
  word-break: break-word;
}
</style>