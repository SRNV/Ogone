<Deno
  t={string}
  scrollY={number}>
  <template private>
    <style>
      @const value = ${this.scrollY + 0}px;
      .container {
        position: fixed;
        top: 35%;
        width: 40px;
        height: 300px;
        right: 0;
        background: #2f3035;
        border-radius: 5px 0 0 5px;
        filter: drop-shadow(0px $value 4px #00000086) blur(${this.scrollY / 100}px);
      }
    </style>
    <div class="container @{Deno.env.get('class')}"> ${this.scrollY} </div>
  </template>
  <proto>
    def:
      scrollY: 0
      end: '@{Deno.text()}'
      end: "@{Deno.text()}"
    declare:
      t = '@{0 + Deno.text()}'
  </proto>
</Deno>